                <button class = "sign-out" type="submit">LOG OUT</button>
              </form>
            </ul>
    </nav>
          
	</header>
<ul>
  <% for (var i = 0; i < cart.length; i++) { %>
    <li>
      <img src="image/<%= bookid[i]%>.jpg" alt="<%= cart[i].BookTitle %>">
      <div>
        <h3><%= cart[i].BookTitle %></h3>
        <p style="text-align: right;">$<%= cart[i].Price %></p>
        <form method="DELETE" action="/cart">
          <input type="hidden" name="BookID" value="<%=bookid[i]%>">
          <button class="delete-button" type="submit">Delete from Cart</button>
        </form>
      </div>
    </li>
  <% } %>
</ul>
<p style="margin-bottom: 2rem; text-align: right;font-size: larger;font-weight: bold;">Total Price: $<%= totalPrice %></p>
<form method="POST" action="/checkout">
  <button class="checkout-button" type="submit">Checkout</button>
</form>
</body>
